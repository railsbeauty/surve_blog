<h1><%= @article.title %></h1>
<p>Tags: <%= tag_links(@article.tags) %></p>
<p><%= image_tag @article.image.url %></p>
<p><%= @article.body %><p>
<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
<% if logged_in? %>
<table border="3" bordercolor="#c86260"  width="50%">
	<tr>
       <td><%= link_to "Back", articles_path  %><br/></td>
       <td><%= link_to "delete", article_path(@article), :confirm => "Are you sure to delete it?", method: :delete %><br/></td>
       <td><%= link_to "Edit", edit_article_path(@article) %></td>
   </tr>
</table>
<% end %>
